    <title>Home Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 text-white">
    <!-- Navbar -->
    <nav class="bg-gray-800 p-4 shadow-lg">
      <div class="container mx-auto flex justify-between items-center">
        <a href="#" class="text-2xl font-semibold text-yellow-500">MyApp</a>
        <div>
          <a href="#" class="text-yellow-500 hover:text-yellow-700 mx-4"
            >Home</a
          >
          <a href="#" class="text-yellow-500 hover:text-yellow-700 mx-4"
            >Features</a
          >
          <a href="#" class="text-yellow-500 hover:text-yellow-700 mx-4"
            >Pricing</a
          >
          <a href="#" class="text-yellow-500 hover:text-yellow-700 mx-4"
            >Contact</a
          >
        </div>
        <div>
          <a
            href="/logout"
            class="bg-yellow-500 hover:bg-yellow-700 text-gray-900 font-bold py-2 px-4 rounded"
