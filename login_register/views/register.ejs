<%include ./partials/header.ejs%>
    <title>Register Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .neon-shadow {
            text-shadow: 0 0 5px #ffdd57, 0 0 10px #ffdd57, 0 0 20px #ffdd57, 0 0 30px #ffdd57;
        }
    </style>
</head>
<body class="bg-gray-900 text-white flex items-center justify-center h-screen">
    <div class="w-full max-w-md">
        <form class="bg-gray-800 shadow-lg rounded-lg px-8 pt-6 pb-8 mb-4" action="/register" method="post">
            <h2 class="text-3xl font-semibold mb-6 text-center neon-shadow">Register</h2>
            <div class="mb-4">
                <label class="block text-yellow-500 text-sm font-bold mb-2" for="name">
                    Name
                </label>
                <input class="shadow appearance-none border-2 border-gray-700 rounded w-full py-2 px-3 text-gray-900 leading-tight focus:outline-none focus:border-yellow-500" id="name" name="name" type="text" placeholder="Name">
            </div>
            <div class="mb-4">
                <label class="block text-yellow-500 text-sm font-bold mb-2" for="username">
                    Username
                </label>
                <input class="shadow appearance-none border-2 border-gray-700 rounded w-full py-2 px-3 text-gray-900 leading-tight focus:outline-none focus:border-yellow-500" id="username" name="username" type="text" placeholder="Username">
            </div>
            <div class="mb-4">
                <label class="block text-yellow-500 text-sm font-bold mb-2" for="email">
                    Email
                </label>
                <input class="shadow appearance-none border-2 border-gray-700 rounded w-full py-2 px-3 text-gray-900 leading-tight focus:outline-none focus:border-yellow-500" name="email" id="email" type="email" placeholder="Email">
            </div>
            <div class="mb-6">
                <label class="block text-yellow-500 text-sm font-bold mb-2" for="password">
                    Password
                </label>
                <input class="shadow appearance-none border-2 border-gray-700 rounded w-full py-2 px-3 text-gray-900 mb-3 leading-tight focus:outline-none focus:border-yellow-500" id="password" name="password" type="password" placeholder="Password">
            </div>
            <div class="flex items-center justify-between">
                <input class="bg-yellow-500 hover:bg-yellow-700 text-gray-900 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline neon-shadow" type="submit" value="Register">
                    
                <a class="inline-block align-baseline font-bold text-sm text-yellow-500 hover:text-yellow-700" href="/login">
                    Login
                </a>
            </div>
        </form>
    </div>
</body>
</html>
<%include ./partials/footer.ejs%>
